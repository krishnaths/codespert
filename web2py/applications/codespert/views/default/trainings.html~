{{extend 'layout.html'}}

<script type="text/javascript">
$(document).ready(function(){
$('a').click(function(){
	if($(this).text() == "Perl")
	{
	$("#dvPerl").attr("visibility","visible");
	$("#dvPerl").attr("display","block");
	$("#dvFrames").html($("#dvPerl").html());
	}
	else if($(this).text() == "Python"){
	console.log("python code");
	$("#dvPython").attr("visibility","visible");
        $("#dvPython").attr("display","block");
        $("#dvFrames").html($("#dvPython").html());
	}
	else if($(this).text() == "Java"){
	$("#dvJava").attr("visibility","visible");
        $("#dvJava").attr("display","block");
        $("#dvFrames").html($("#dvJava").html());
	}
	else if($(this).text() == "Unix"){
        $("#dvUnix").attr("visibility","visible");
        $("#dvUnix").attr("display","block");
        $("#dvFrames").html($("#dvUnix").html());
        }
	else if($(this).text() == "Csharp"){
        $("#dvCsharp").attr("visibility","visible");
        $("#dvCsharp").attr("display","block");
        $("#dvFrames").html($("#dvCsharp").html());
        }


});
});
</script>

